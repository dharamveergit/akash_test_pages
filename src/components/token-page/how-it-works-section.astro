---
import Card from "./card.astro";

const { howItWorksSection } = Astro.props;
---

<div class="mt-[38px]">
  <h2 class="text-2xl font-bold leading-9 md:text-2lg md:leading-[40px]">
    {howItWorksSection.title}
  </h2>

  <div
    class="mx-auto mt-[40px] grid grid-cols-1 gap-10 md:grid-cols-2 xl:grid-cols-4"
  >
    {
      howItWorksSection.cards.map((card: any) => (
        <Card
          icon={card.icon}
          title={card.title}
          description={card.description}
        />
      ))
    }
  </div>
</div>

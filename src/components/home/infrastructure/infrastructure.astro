---
import { FAQ } from "@/components/faq";
import { Image } from "astro:assets";
import { Code2 } from "lucide-react";
const { infrastructureSection } = Astro.props;
console.log(infrastructureSection);
---

<section class="container mb-10">
  <div class="border-paraDark border-b pb-[80px] pt-0 md:pb-[120px] md:pt-10">
    <h2
      class="text-center text-xl font-medium leading-[30px] md:text-2lg md:leading-[48px]"
    >
      Akash - The Decentralized Infrastructure Supercloud
    </h2>

    <div class="mt-10">
      <div
        class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3 3xl:grid-cols-6 3xl:gap-6"
      >
        {
          infrastructureSection.cards.map((card: any) => (
            <div class="flex flex-col items-start ">
              <div class="border-paraDark  bg-background2 flex-shrink-0 rounded-lg border p-3 ">
                <svg class="h-6 w-6 " fill="currentColor" viewBox="0 0 24 24">
                  <use
                    xlink:href={`${card.image.src}#img`}
                    href={`${card.image.src}#img`}
                  />
                </svg>
              </div>

              <div class="mt-5 md:mt-6">
                <h4 class=" text-base font-bold leading-[24px] md:text-xl">
                  {card.title}
                </h4>
                <p class="mt-2 flex-shrink-0 text-xs leading-[16px] md:mt-3 md:text-base ">
                  {card.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

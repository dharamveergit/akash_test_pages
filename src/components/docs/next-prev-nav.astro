---
import { ChevronLeftIcon, ChevronRightIcon } from "lucide-react";

const { nav } = Astro.props;
---

<div
  class="mt-10 flex flex-col items-center justify-between space-y-4 md:flex-row md:space-x-4 md:space-y-0"
>
  {
    nav.prevPage?.link ? (
      <a
        class="line-clamp-1 flex  w-full  cursor-pointer items-center justify-start  rounded-lg border bg-background2 px-2 py-3   text-base text-textGray no-underline shadow-sm hover:text-primary md:w-fit md:justify-self-end md:px-4 md:py-2 md:font-normal"
        href={nav.prevPage.link}
      >
        <ChevronLeftIcon className="h-5 w-5  mr-2" />
        {nav.prevPage.label}
      </a>
    ) : (
      ""
    )
  }

  {
    nav.nextPage?.link ? (
      <a
        class="line-clamp-1 flex  w-full  cursor-pointer items-center justify-end  rounded-lg border bg-background2 px-2 py-3   text-base text-textGray no-underline shadow-sm hover:text-primary md:w-fit md:justify-self-end md:px-4 md:py-2 md:font-normal"
        href={nav.nextPage.link}
      >
        {nav.nextPage.label}
        <ChevronRightIcon className="h-5 w-5  ml-1 mt-0.4 md:mt-0" />
      </a>
    ) : (
      ""
    )
  }
</div>

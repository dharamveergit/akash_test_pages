---
import { Image } from "astro:assets";

import SunIcon from "@/assets/icons/sun.svg";
import Search from "./search-dialog.tsx";
import AkashDocsLogo from "./akash-docs-logo.astro";
import ToggleNav from "./toggle-nav.astro";
import DarkModeToggle from "../dark-mode-toggle.astro";
import ButtonLink from "../ui/button-link.astro";
import { DiscordIcon, GithubIcon, TwitterIcon } from "../header/icons";
const { nav } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
---

<nav class="flex flex-col">
  <div class="flex items-center justify-between border-b px-4 py-6 md:px-10">
    <div class="flex items-center gap-8">
      <div class="flex items-end gap-x-1">
        <AkashDocsLogo />
        <p class="text-sm font-bold leading-none">DOCS</p>
      </div>
      <div>
        <Search client:load currentPath={pathname} />
      </div>
    </div>
    <div class="hidden flex-shrink-0 md:flex md:gap-x-[16px]">
      <DarkModeToggle />

      <div class="hidden gap-x-[14px] p-2 text-para xl:flex">
        <GithubIcon />
        <TwitterIcon />

        <DiscordIcon />
      </div>

      <div class="flex items-center md:gap-x-4">
        <div>
          <ButtonLink
            link="https://akashnetwork.medium.com/"
            variant="secondary"
            size="sm"
            className=" rounded-[4px]  px-[11px] py-[7px] text-xs "
          >
            <svg
              width="16"
              height="16"
              viewBox="0 0 16 16"
              fill="none"
              stroke="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g clip-path="url(#clip0_2801_2947)">
                <path
                  d="M6.11719 9.88588L9.88841 6.11462M9.88841 6.11462H6.58859M9.88841 6.11462V9.41448"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M8.0026 14.6667C11.6845 14.6667 14.6693 11.6819 14.6693 8.00004C14.6693 4.31814 11.6845 1.33337 8.0026 1.33337C4.3207 1.33337 1.33594 4.31814 1.33594 8.00004C1.33594 11.6819 4.3207 14.6667 8.0026 14.6667Z"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </g>
              <defs>
                <clipPath id="clip0_2801_2947">
                  <rect width="16" height="16" fill="white"></rect>
                </clipPath>
              </defs>
            </svg>

             Reach Out
          </ButtonLink>
        </div>
        <div>
          <a
            href="https://deploy.cloudmos.io/"
            class="flex items-center justify-center rounded-[4px] bg-primary px-[11px] py-[7px] text-xs font-medium leading-[16px] text-white hover:bg-primary/90"
            >Deploy Now</a
          >
        </div>
      </div>
    </div>
  </div>
  <ToggleNav nav={nav} />
</nav>
